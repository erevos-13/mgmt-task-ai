{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "out-tsc/task-mgmt-api",
    "module": "nodenext",
    "types": ["node", "express"],
    "rootDir": "src",
    "moduleResolution": "nodenext",
    "tsBuildInfoFile": "out-tsc/task-mgmt-api/tsconfig.app.tsbuildinfo"
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "out-tsc",
    "dist",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "eslint.config.js",
    "eslint.config.cjs",
    "eslint.config.mjs"
  ]
}
